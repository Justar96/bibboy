{
  "compilerOptions": {
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["bun"],
    "resolveJsonModule": true
  },
  "include": ["src", "src/**/*.json"],
  "exclude": ["node_modules", "dist", "tests"]
}
