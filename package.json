{
  "name": "bibboy-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*"],
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.3.8"
  },
  "scripts": {
    "dev": "bun run --filter @bibboy/client dev",
    "dev:server": "cd packages/server && bun run --watch src/server.ts",
    "dev:all": "bun run dev & bun run dev:server & wait",
    "build": "bun run build:shared && bun run build:agent-runtime && bun run build:phaser-chat && bun run build:client && bun run build:server",
    "build:shared": "bun run --filter @bibboy/shared build",
    "build:agent-runtime": "bun run --filter @bibboy/agent-runtime build",
    "build:phaser-chat": "bun run --filter @bibboy/phaser-chat build",
    "build:client": "bun run --filter @bibboy/client build",
    "build:server": "bun run --filter @bibboy/server build",
    "build:standalone": "bun run scripts/build-standalone.ts",
    "start": "bun run --filter @bibboy/server start",
    "preview": "bun run --filter @bibboy/client preview",
    "lint": "bun run --filter '*' lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "server": "bun run --filter @bibboy/server start"
  },
  "catalog": {
    "effect": "^3.19.0",
    "@effect/platform": "^0.94.0",
    "@effect/schema": "^0.75.0",
    "typescript": "^5.9.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "framer-motion": "^12.29.0",
    "highlight.js": "^11.11.0",
    "lucide-react": "^0.563.0",
    "gray-matter": "^4.0.3",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/bun": "^1.2.14",
    "@vitejs/plugin-react": "^5.1.0",
    "tailwindcss": "^4.1.0",
    "@tailwindcss/vite": "^4.1.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.0",
    "jsdom": "^27.4.0",
    "fast-check": "^4.5.0"
  },
  "dependencies": {
    "@effect/experimental": "^0.58.0",
    "@effect/platform": "^0.94.2",
    "@effect/schema": "^0.75.5",
    "effect": "^3.19.15",
    "framer-motion": "^12.29.2",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "baseline-browser-mapping": "^2.9.19",
    "fast-check": "^4.5.3",
    "globals": "^17.2.0",
    "jsdom": "^27.4.0",
    "oxlint": "^0.16.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
